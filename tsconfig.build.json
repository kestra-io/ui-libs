{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue",
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
